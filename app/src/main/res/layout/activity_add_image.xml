<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
    >
        <TextView
                android:id="@+id/text_enter_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginTop="@dimen/fkr_spacing_normal"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="@string/add_image_url"
                style="@style/TextAppearance.AppCompat.Title"
        />
        <EditText
                android:id="@+id/edit_image_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fkr_spacing_small"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/text_enter_url"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:ems="15"
                android:inputType="textUri"
        />
        <TextView
                android:id="@+id/text_enter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginTop="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/edit_image_url"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="@string/add_image_title"
                style="@style/TextAppearance.AppCompat.Title"
        />
        <EditText
                android:id="@+id/edit_image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                android:layout_marginTop="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/text_enter_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:ems="15"
                android:inputType="textUri"
        />
        <TextView
                android:id="@+id/text_enter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginTop="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/edit_image_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="@string/add_image_date"
                style="@style/TextAppearance.AppCompat.Title"
        />
        <EditText
                android:id="@+id/edit_image_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                android:layout_marginTop="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/text_enter_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
        />
        <Button
                android:id="@+id/button_add_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fkr_spacing_small"
                android:layout_marginEnd="@dimen/fkr_spacing_small"
                android:layout_marginStart="@dimen/fkr_spacing_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/menu_add_new_picture"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
