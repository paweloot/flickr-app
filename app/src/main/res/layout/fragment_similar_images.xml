<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:stretchColumns="1">


    <ImageView
            android:id="@+id/similar_image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginStart="@dimen/fkr_spacing_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/similar_image_2"
            app:layout_constraintBottom_toTopOf="@+id/similar_image_4"
            android:contentDescription="@string/similar_image_description"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
    <ImageView
            android:id="@+id/similar_image_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/fkr_spacing_small"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginEnd="@dimen/fkr_spacing_small"
            app:layout_constraintStart_toEndOf="@+id/similar_image_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/similar_image_3"
            app:layout_constraintBottom_toTopOf="@+id/similar_image_5"
            android:contentDescription="@string/similar_image_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
    <ImageView
            android:id="@+id/similar_image_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginEnd="@dimen/fkr_spacing_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/similar_image_2"
            app:layout_constraintBottom_toTopOf="@+id/similar_image_6"
            android:contentDescription="@string/similar_image_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
    <ImageView
            android:id="@+id/similar_image_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/fkr_spacing_small"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginStart="@dimen/fkr_spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/similar_image_5"
            app:layout_constraintTop_toBottomOf="@+id/similar_image_1"
            android:contentDescription="@string/similar_image_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
    <ImageView
            android:id="@+id/similar_image_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/fkr_spacing_small"
            android:layout_marginStart="@dimen/fkr_spacing_small"
            android:layout_marginBottom="@dimen/fkr_spacing_small"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            app:layout_constraintStart_toEndOf="@+id/similar_image_4"
            app:layout_constraintEnd_toStartOf="@+id/similar_image_6"
            app:layout_constraintTop_toBottomOf="@+id/similar_image_2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/similar_image_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
    <ImageView
            android:id="@+id/similar_image_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/fkr_spacing_small"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginEnd="@dimen/fkr_spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/similar_image_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/similar_image_3"
            android:contentDescription="@string/similar_image_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[2]"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
