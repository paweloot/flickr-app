<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".image.ImageDetailsFragment">

    <fragment android:id="@+id/image_info_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:name="com.paweloot.flickrapp.image.ImageInfoFragment"
    />

    <View
            android:id="@+id/image_details_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
    />

    <fragment android:id="@+id/similar_images_fragment"
              android:name="com.paweloot.flickrapp.image.SimilarImagesFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
    />

</LinearLayout>