<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".image.ImageDetailsFragment"
>
    <fragment
            android:id="@+id/fragment_image_info"
            android:name="com.paweloot.flickrapp.image.ImageInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
    />
    <View
            android:id="@+id/image_details_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fkr_list_divider_height"
            android:layout_marginStart="@dimen/fkr_spacing_small"
            android:layout_marginEnd="@dimen/fkr_spacing_small"
            android:layout_marginTop="@dimen/fkr_spacing_small"
            android:layout_marginBottom="@dimen/fkr_spacing_small"
            android:background="?android:attr/listDivider"
    />

    <fragment
            android:id="@+id/fragment_similar_images"
            android:name="com.paweloot.flickrapp.image.SimilarImagesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
    />
</LinearLayout>